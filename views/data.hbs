<div class='row col-lg-12'>             
    <h3>Algemene gegevens</h3>			
    <table id='generalTable' class="table table-striped table-bordered">
        <colgroup>
            <col style="width:30%" />
            <col style="width:70%" />
        </colgroup>
        <tbody>
            <tr>
                <td>Naam</td>
                <td>{{{ data.firstName }}} {{{ data.lastName }}}</td>
            </tr>
            <tr>
                <td>Leeftijd</td>
                <td>{{{ data.age }}}</td>
            </tr>
            <tr>
                <td>Startnummer</td>
                <td>{{{ data.startNumber }}}</td>
            </tr>
            <tr>
                <td>Adres</td>
                <td>{{{ data.adres }}}</td>
            </tr>
            <tr>
                <td>Woonplaats</td>
                <td>{{{ data.city }}}</td>
            </tr>
            <tr>
                <td>Postcode</td>
                <td>{{{ data.postalCode }}}</td>
            </tr>
            <tr>
                <td>Telefoonnummer ouders</td>
                <td>{{{ data.phoneNumber }}}</td>
            </tr>
        </tbody>
    </table>
    
    <h3>Medische gegevens</h3>				
    <table id='medicalTable' class="table table-striped table-bordered">
        <colgroup>
            <col style="width:30%" />
            <col style="width:70%" />
        </colgroup>
        <tbody>
            <tr>
                <td>Classificaties</td>
                <td>{{{ data.classifications }}}</td>
            </tr>
            <tr>
                <td>Medicatie</td>
                <td class='dataTableSecondRow'>{{{ data.medication }}}</td>
            </tr>
            <tr>
                <td>Bijzonderheden</td>
                <td class='dataTableSecondRow'>{{{ data.extra }}}</td>
            </tr>              
        </tbody>
    </table>
</div>