<div class='row col-md-12'>         
    <h3>Gegevens pagina van {{data.firstName}} {{ data.lastName }}</h3> 
    <div>
        <div class='floatLeft'>Verander via wie u de gegevens wilt inzien</div>
        <div class='styled-select slate floatLeft'>  
            <select id="selectChild" onchange="javascript:location.href = '/deelnemers/' + this.value + '/gegevens';">
                <option value="" disabled selected>Selecteer kind</option>
                {{#each childs}}
                    <option value="{{this.id}}">{{ this.firstName }} {{ this.lastName }}</option>
                {{/each}}
            </select>
        </div>
    </div>
</div>    
<div class='row col-md-12'>     
    <hr>   
    <h4>Algemene gegevens</h4>
    <table id='generalTable' class="table table-striped table-bordered">
        <colgroup>
            <col style="width:30%" />
            <col style="width:70%" />
        </colgroup>
        <tbody>
            <tr>
                <td>Naam</td>
                <td>{{ data.firstName }} {{ data.lastName }}</td>
            </tr>
            <tr>
                <td>Leeftijd</td>
                <td>{{ data.age }}</td>
            </tr>
            <tr>
                <td>Startnummer</td>
                <td>{{ data.startNumber }}</td>
            </tr>
            <tr>
                <td>Adres</td>
                <td>{{ data.adres }}</td>
            </tr>
            <tr>
                <td>Woonplaats</td>
                <td>{{ data.city }}</td>
            </tr>
            <tr>
                <td>Postcode</td>
                <td>{{ data.postalCode }}</td>
            </tr>
            <tr>
                <td>Telefoonnummer ouders</td>
                <td>{{ data.phoneNumber }}</td>
            </tr>
        </tbody>
    </table>

    <h4>Medische gegevens</h4>
    <table id='medicalTable' class="table table-striped table-bordered">
        <colgroup>
            <col style="width:30%" />
            <col style="width:70%" />
        </colgroup>
        <tbody>
            <tr>
                <td>Classificaties</td>
                <td>{{ data.classifications }}</td>
            </tr>
            <tr>
                <td>Medicatie</td>
                <td class='dataTableSecondRow'>{{ data.medication }}</td>
            </tr>
            <tr>
                <td>Bijzonderheden</td>
                <td class='dataTableSecondRow'>{{ data.extra }}</td>
            </tr>
        </tbody>
    </table>
</div>
