<div class='row col-md-12'>         
    <h3>Gegevens pagina van {{data.first_name}} {{ data.last_name }}</h3> 
    <div>
        <div class='styled-select slate floatLeft'>  
            <select id="selectChild" onchange="javascript:location.href = '/deelnemers/' + this.value + '/gegevens';">
                <option value="" disabled selected>Selecteer kind</option>
                {{#each childs}}
                    <option value="{{this.guid}}">{{ this.first_name }} {{ this.last_name }}</option>
                {{/each}}
            </select>
        </div>
    </div>
</div>    
