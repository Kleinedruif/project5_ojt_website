<div class="col-md-12">
    <div class="col-md-12">
        <h3>Welkom op de website van Ome Joop's Tour</h3>
    </div>
    
    <div class="col-md-6">
        {{#each childs}}       
            <table class="table table-striped table-bordered overview-table">
                <colgroup>
                    <col style="width:30%" />
                    <col style="width:70%" />
                </colgroup>
                <tbody>
                    <tr>
                        <td>Naam</td>
                        <td>
                            <span>{{ this.first_name }} {{ this.last_name }}</span>
                            <span class="glyphicon glyphicon-share-alt child-info-page icon" aria-hidden="true" ref="{{this.guid}}"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>Team</td>                 
                        <td>{{ this.name }}</td>
                    </tr>              
                    <tr>
                        <td>Individuele punten</td>                 
                        <td class='individualScore' ref='{{ this.guid }}'></td>
                    </tr>
                    <tr>
                        <td>Team punten</td>                 
                        <td id='teamScore{{ this.guid }}'></td>
                    </tr>
                    <tr>
                        <td>Teamleider</td>
                        <td>
                            <span>{{ this.first_name_teamleader }} {{ this.last_name_teamleader }}</span>
                            <span class="glyphicon glyphicon-envelope message-team-leader icon" aria-hidden="true" ref="{{this.guid_teamleader}}"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
        {{/each}}
    </div>
    
    <div class="col-md-6">
        {{#each childs}}
            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Notities voor {{ this.first_name }} {{ this.last_name }}
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered childnotes-main">
                            <tbody>
                                {{#each this.notes}}
                                    <tr>
                                        <td class="date">{{this.date}}</td>
                                    </tr>
                                    <tr>
                                        <td>{{this.content}}</td>
                                    </tr>
                                {{/each}}
                                {{#unless this.notes.length}}
                                    <tr>
                                        <td>Er zijn geen notities gevonden.</td>
                                    </tr>
                                {{/unless}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

<script src="/javascripts/index.js"></script>   
