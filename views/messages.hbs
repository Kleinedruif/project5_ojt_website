</div>
<div class='col-md-8 messageBox'>   
    <div class="row messages">
        <!--<lu class="list-group" id="messageList">-->
            {{#each messages}}
                <div class="panel col-md-12 messagePanel">
                    <div class="col-md-12 row panel-body message {{#if (if_ql this.sender_guid "4" )}} ownMessage {{else}} recievedMessage {{/if}}">{{ this.body }}</div>
                </div>
            {{/each}}
        <!--</lu>-->
    </div>
    <div class="row">
        <span class="error-block">{{errors.name}}</span><span class="error-block">{{errors.message}}</span>
        <form id="msgForm">
            <input type="hidden" name="_csrf" id="csrf" value="{{csrf}}">                
        <!-- <p><label for="to">Aan</label><input class="form-control" id="sendToField" type="text" name="name" placeholder="Naam"></p>               
            <p><label for="title">Titel</label><input class="form-control" id="sendTitleField" type="text" name="title" placeholder="Titel"></p>-->
        </form>
        <textarea class="form-control floatLeft" form="msgForm" rows="5" id="msgField" name="msg" placeholder="Bericht"></textarea>
        
        <button id="sendMsgBtn" class="btn btn-success floatRight">Verstuur</button>
    </div>
</div>

